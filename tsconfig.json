{
  // File inclusion
  "include": ["src/**/*"],
  "compilerOptions": {
    // Project options
    "incremental": true,
    "lib": [
      "ES2019",
      "ES2020.BigInt",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.Symbol.WellKnown"
    ],
    "module": "CommonJS",
    "outDir": "./build",
    "sourceMap": true,
    "target": "ES2019",

    // Strict checks
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,

    // Module resolution
    "esModuleInterop": true,
    "types": ["node"],

    // Linter checks
    "noImplicitReturns": true,

    // Advanced
    "forceConsistentCasingInFileNames": true,
    "newLine": "LF",
    "skipLibCheck": true,

    // QoL
    "noErrorTruncation": true
  }
}

